<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_popup"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="@dimen/w_h_2"
        android:background="@color/cat_list_view_bg">
        <ImageView
            android:id="@+id/iv_close"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/w_h_5"
            android:layout_marginTop="@dimen/w_h_5"
            android:layout_width="@dimen/w_h_40"
            android:layout_height="@dimen/w_h_40"
            android:padding="@dimen/w_h_5"
            android:src="@drawable/close"/>
        <TextView
            android:layout_margin="15dp"
            android:id="@+id/tv_h1_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R E G I S T E R"
            android:textColor="@color/yellow_home"
            android:textSize="32sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0EFF5"
        android:layout_marginLeft="@dimen/w_h_2"
        android:layout_marginRight="@dimen/w_h_2"
        >
        <TextView
            android:id="@+id/tv_h2_reg"
            android:textColor="@color/cat_list_view_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_left_20"
            android:textSize="@dimen/text_size_15"
            android:text="@string/reg_h1"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:singleLine="true"
            android:textColor="@color/cat_list_view_bg"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="@dimen/text_size_14"
            android:id="@+id/et_name_reg"
            android:textColorHint="#F0EFF5"
            android:paddingLeft="10dp"
            android:hint="Name"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_h_40"
            android:background="@drawable/reg_et_bg"/>
        <EditText
            android:singleLine="true"
            android:textCursorDrawable="@drawable/cursor"
            android:textColor="@color/cat_list_view_bg"
            android:textSize="@dimen/text_size_14"
            android:id="@+id/et_title_reg"
            android:textColorHint="#F0EFF5"
            android:paddingLeft="10dp"
            android:hint="Title"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_h_40"
            android:background="@drawable/reg_et_bg"/>
        <EditText
            android:singleLine="true"
            android:textColor="@color/cat_list_view_bg"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="@dimen/text_size_14"
            android:id="@+id/et_company_reg"
            android:textColorHint="#F0EFF5"
            android:paddingLeft="10dp"
            android:hint="Company"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_h_40"
            android:background="@drawable/reg_et_bg"/>
        <EditText
            android:singleLine="true"
            android:textCursorDrawable="@drawable/cursor"
            android:textColor="@color/cat_list_view_bg"
            android:textSize="@dimen/text_size_14"
            android:id="@+id/et_email_reg"
            android:textColorHint="#F0EFF5"
            android:paddingLeft="10dp"
            android:hint="Email"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_h_40"
            android:background="@drawable/reg_et_bg"/>
        <TextView
            android:id="@+id/tv_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:text="@string/reg_agreement"
            android:textColor="@color/cat_list_view_bg"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/chkbox_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:buttonTint="@color/cat_list_view_bg"
            android:text="@string/yes"
            android:textColor="@color/cat_list_view_bg"
            android:textSize="14sp" />
        <Button
            android:textSize="@dimen/text_size_17"
            android:id="@+id/btn_send"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/color_white"
            android:background="@color/color_black"
            android:layout_width="@dimen/w_h_100"
            android:layout_height="@dimen/w_h_40"
            android:text="Send"/>

    </LinearLayout>
