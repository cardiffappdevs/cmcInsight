<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context="com.example.eugein.cmc_insights.RegisterActivity">

    <fragment
        android:id="@+id/headerFrag"
        android:name="com.example.eugein.cmc_insights.HeaderFragement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar_register"
            layout="@layout/tool_bar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="@dimen/w_h_2"
                    android:background="@color/cat_list_view_bg">

                    <TextView
                        android:id="@+id/tv_h1_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="R E G I S T E R"
                        android:textColor="@color/yellow_home"
                        android:textSize="32sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/w_h_2"
                    android:layout_marginRight="@dimen/w_h_2"
                    android:background="#F0EFF5">

                    <TextView
                        android:id="@+id/tv_h2_reg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_left_20"
                        android:layout_marginLeft="@dimen/margin_left_20"
                        android:layout_marginRight="@dimen/margin_left_20"
                        android:layout_marginTop="12dp"
                        android:text="@string/reg_h1"
                        android:textColor="@color/cat_list_view_bg"
                        android:textSize="14sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_name_reg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/w_h_40"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/reg_et_bg"
                        android:hint="Name"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/cat_list_view_bg"
                        android:textColorHint="#F0EFF5"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="@dimen/text_size_14" />

                    <EditText
                        android:id="@+id/et_title_reg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/w_h_40"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/reg_et_bg"
                        android:hint="Title"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/cat_list_view_bg"
                        android:textColorHint="#F0EFF5"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="@dimen/text_size_14" />

                    <EditText
                        android:id="@+id/et_company_reg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/w_h_40"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/reg_et_bg"
                        android:hint="Company"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/cat_list_view_bg"
                        android:textColorHint="#F0EFF5"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="@dimen/text_size_14" />

                    <EditText
                        android:id="@+id/et_email_reg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/w_h_40"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/reg_et_bg"
                        android:hint="Email"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/cat_list_view_bg"
                        android:textColorHint="#F0EFF5"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tv_agree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/reg_agreement"
                        android:textColor="@color/cat_list_view_bg"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/chkbox_agree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:buttonTint="@color/cat_list_view_bg"
                        android:text="@string/yes"
                        android:textColor="@color/cat_list_view_bg"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btn_send"
                        android:layout_width="@dimen/w_h_100"
                        android:layout_height="@dimen/w_h_40"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/color_black"
                        android:text="Send"
                        android:textAllCaps="false"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/text_size_17" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include layout="@layout/slider_menu" />
</android.support.v4.widget.DrawerLayout>
