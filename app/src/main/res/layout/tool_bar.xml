<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tool_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/w_h_50"
    android:background="@drawable/tool_bar_gradiant"
    android:orientation="vertical"
    app:contentInsetStart="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:id="@+id/rl_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/nav_chat_width"
            android:layout_height="@dimen/nav_chat_height"
            android:layout_centerVertical="true"
            android:src="@drawable/nav_logo"
            android:visibility="invisible"
            android:layout_marginLeft="@dimen/w_h_10"/>

        <ImageView
            android:layout_marginLeft="@dimen/w_h_10"
            android:id="@+id/iv_arrow"
            android:layout_width="@dimen/nav_chat_width"
            android:layout_height="@dimen/nav_chat_height"
            android:layout_centerVertical="true"
            android:src="@drawable/left_arrow"
            android:visibility="invisible" />

        <ImageView
            android:padding="@dimen/w_h_2"
            android:id="@+id/iv_menu_toolbar"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginRight="@dimen/w_h_10"
            android:scaleType="fitXY"
            android:src="@drawable/tb_men"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</android.support.v7.widget.Toolbar>